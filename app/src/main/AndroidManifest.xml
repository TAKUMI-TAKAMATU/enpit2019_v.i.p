<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.plank">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SensorActivity"
            android:label="Plank"></activity>
        <activity
            android:name=".ImageActivity"
            android:label="Plank"></activity> <!-- センサーボタン -->
        <activity
            android:name=".CompareActivity"
            android:label="Plank"></activity>
        <activity
            android:allowBackup="true"
            android:name=".OpencvActivity"
            android:label="Plank"></activity>
        <activity
            android:name=".PosenetActivity"
            android:label="Plank"></activity>
        <activity
            android:name=".BiginnerActivity"
            android:label="Plank"></activity>
        <activity
            android:name=".IntermediateActivity"
            android:label="Plank"></activity>
        <activity
            android:name=".AdvancedActivity"
            android:label="Plank"></activity>
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/activity_image2" /> <!-- センサーボタン -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_path" />
        </provider>
    </application>

</manifest>